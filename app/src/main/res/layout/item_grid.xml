<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_grid_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_margin="12dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/item_grid_linLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/item_icon_gcontainer"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rectangle_frame"
            tools:src="@drawable/icon_apple"/>

        <TextView
            android:id="@+id/item_title_gcontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/dark_grey"
            tools:text="Apel" />

        <TextView
            android:id="@+id/item_shortDesc_gcontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:lines="4"
            android:ellipsize="end"
            android:textColor="@color/dark_grey"
            tools:text="Pir merupakan buah yang kaya akan kandungan nutrisi seperti protein, serat, serta vitamin C dan K. Pir juga mengandung prebiotik yang mampu menjaga kesehatan usus"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>